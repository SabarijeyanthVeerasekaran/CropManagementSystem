<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/h_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/h_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/h_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layout_soil"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_soil"

            app:layout_constraintTop_toBottomOf="@+id/h_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/soilimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/s" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/layout_soil"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Soil Quality"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="424dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_diseases"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_soil"
            app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                android:id="@+id/diseasesimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dieases" />

        </LinearLayout>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layout_diseases"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:text="Diseases Prediction"
            android:textSize="20dp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_harvest"

            app:layout_constraintTop_toBottomOf="@+id/layout_diseases"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/harvestimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/harvesting" />
        </LinearLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_harvest"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Harvesting"
               android:gravity="center"
                android:textSize="20dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_cold"

            app:layout_constraintTop_toBottomOf="@+id/layout_harvest"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/coldimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cold11" />
        </LinearLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_cold"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center"
                android:text="Cold Storage"

                android:textSize="20dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>